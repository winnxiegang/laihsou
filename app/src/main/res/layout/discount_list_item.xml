<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imageview_radius="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/x30"
    android:paddingTop="@dimen/y20"
    android:paddingRight="@dimen/x30"
    android:paddingBottom="@dimen/y20">

    <com.cherishTang.laishou.custom.customlayout.CornersImageView
        android:id="@+id/showPicture"
        android:layout_width="@dimen/x260"
        android:layout_height="@dimen/y260"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_banner_default"
        imageview_radius:image_view_radius="@dimen/x10" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x52"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lines="1"
            android:textColor="@color/dark_black"
            android:textSize="@dimen/font_16"
            tools:text="【新用户专享】黑茶牙膏" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:includeFontPadding="false"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_12"
            tools:text="国产120g/盒" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_sale"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:background="@drawable/rounded_orange_left"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_12"
                tools:text="已团1300份" />

            <TextView
                android:id="@+id/tv_remaining"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:background="@drawable/rounded_orange_right"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/x34"
                android:paddingRight="@dimen/x34"
                android:textColor="@color/white"
                android:textSize="@dimen/font_12"
                tools:text="剩61份" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="￥"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/orange"
                android:textSize="@dimen/font_20"
                tools:text="5.99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x32"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="￥"
                android:textColor="@color/nv_bg_color"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/nv_bg_color"
                android:textSize="@dimen/font_12"
                tools:text="15.99" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
