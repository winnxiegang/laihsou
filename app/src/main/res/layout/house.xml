<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:orientation="vertical">

    <include layout="@layout/search_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x95"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout style="@style/house_top_layout">

            <TextView
                android:id="@+id/pop_btn_area"
                style="@style/house_top_btn"
                android:text="区域" />
        </LinearLayout>

        <LinearLayout style="@style/house_top_layout">

            <TextView
                android:id="@+id/pop_btn_rental"
                style="@style/house_top_btn"
                android:text="租金" />
        </LinearLayout>

        <LinearLayout style="@style/house_top_layout">

            <TextView
                android:id="@+id/pop_btn_from"
                style="@style/house_top_btn"
                android:text="房型" />
        </LinearLayout>

        <LinearLayout style="@style/house_top_layout">

            <TextView
                android:id="@+id/pop_btn_more"
                style="@style/house_top_btn"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/popupWindowLine"
        style="@style/h_line" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--<com.sanshi.assets.custom.swiperefreshlayout.wight.SwipeRecyclerView-->
    <!--android:id="@+id/refreshLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

</LinearLayout>
