<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y380">

        <com.cherishTang.laishou.custom.customlayout.CustomBannerPicture
            android:id="@+id/customBannerPicture_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isAutoBanner="true"
            app:isBrowse="false"
            app:isDownLoadLocal="false" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y44"
        android:layout_marginBottom="@dimen/y30"
        android:orientation="horizontal">

        <com.cherishTang.laishou.custom.customlayout.CustomTextView
            android:id="@+id/custom_hot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.cherishTang.laishou.custom.customlayout.CustomTextView
            android:id="@+id/custom_discount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.cherishTang.laishou.custom.customlayout.CustomTextView
            android:id="@+id/custom_jmhf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <com.cherishTang.laishou.custom.customlayout.CustomTextView
            android:id="@+id/custom_sjsm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />
        <com.cherishTang.laishou.custom.customlayout.CustomTextView
            android:id="@+id/custom_cloth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
