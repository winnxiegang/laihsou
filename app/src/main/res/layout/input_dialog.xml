<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x610"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rounded_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="修改管理员密码"
        android:textColor="@color/themeColor"
        android:layout_marginTop="@dimen/y25"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:textSize="@dimen/font_14" />
    <EditText
        android:id="@+id/dialog_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:hint="请输入"
        android:maxLines="1"
        android:inputType="text"
        android:layout_marginTop="@dimen/y45"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:paddingLeft="@dimen/x25"
        android:paddingRight="@dimen/x25"
        android:background="@drawable/rounded_white_bg_border_d"
        android:textSize="@dimen/font_14" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/y45"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@color/themeColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/themeColor"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_vertical"
            android:background="@color/themeColor" />

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/themeColor"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
