<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x580"
            android:layout_height="@dimen/x580"
            android:src="@mipmap/launcher_image"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/launcher_image_bg"
            android:layout_marginTop="@dimen/y130"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_16"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/y200"
            android:layout_gravity="center_horizontal"
            android:text="健康减肥，快乐瘦身"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/y30"
            android:layout_gravity="center_horizontal"
            android:text="莱瘦，你的瘦身专家"/>
</LinearLayout>
