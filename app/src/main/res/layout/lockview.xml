<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.cherishTang.laishou.custom.lockView.LockView
            android:id="@+id/lockView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@mipmap/gesture_background">
        </com.cherishTang.laishou.custom.lockView.LockView>
    </LinearLayout>
    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="@string/set_lockView"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        android:layout_marginTop="@dimen/x220"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x100">

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_logo_msg"/>
        <TextView
            android:id="@+id/lockViewTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lockViewTips"
            android:textColor="@color/white"
            android:textSize="@dimen/font_10"/>
    </LinearLayout>
</FrameLayout >
