<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/user_message_text"
            android:text="登录"/>

        <EditText
            android:id="@+id/edit_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x84"
            android:layout_marginRight="@dimen/x84"
            android:layout_marginTop="@dimen/y180"
            android:drawablePadding="@dimen/x25"
            android:background="@drawable/bottom_line_theme_color"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:maxLength="11"
            android:drawableLeft="@mipmap/ic_login_tel"
            android:paddingBottom="@dimen/y15"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x84"
            android:layout_marginRight="@dimen/x84"
            android:layout_marginTop="@dimen/y84"
            android:background="@drawable/bottom_line_theme_color"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y15">

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_login_phone_code"
                android:drawablePadding="@dimen/x25"
                android:background="@null"
                android:hint="请输入您的密码"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/phone_number_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0"
                android:text="获取验证码"
                android:visibility="gone"
                android:textColor="@color/themeColor"
                android:textSize="15sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/x84"
            android:layout_marginRight="@dimen/x84"
            android:layout_marginTop="@dimen/x15"
            android:text="忘记密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_12" />
        <Button
            android:id="@+id/login_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_marginLeft="@dimen/x84"
            android:layout_marginRight="@dimen/x84"
            android:layout_marginTop="@dimen/y190"
            android:background="@drawable/round_phone_code"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:targetApi="lollipop" />
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y44"
            android:text="注册"
            android:includeFontPadding="false"
            android:textColor="@color/themeColor"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>
