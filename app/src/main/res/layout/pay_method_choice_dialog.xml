<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:layout_marginTop="@dimen/y40"
            android:layout_marginBottom="@dimen/y40"
            android:textColor="@color/autoColor"
            android:paddingLeft="@dimen/x30"
            android:textSize="@dimen/font_16" />
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x30"
            android:src="@mipmap/icon_pay_method_close"/>
    </RelativeLayout>
    <View style="@style/h_line_default_bg"/>

        <RelativeLayout
            android:id="@+id/rl_weChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y38"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50">
            <ImageView
                android:id="@+id/image_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_pay_method_wechat"/>
            <TextView
                android:layout_toRightOf="@+id/image_weChat"
                android:id="@+id/tv_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="@color/autoColor"
                android:paddingLeft="@dimen/x25"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_14" />
            <TextView
                android:layout_below="@+id/tv_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信安全支付"
                android:textColor="@color/gray"
                android:paddingLeft="@dimen/x25"
                android:layout_marginTop="@dimen/y14"
                android:layout_toRightOf="@+id/image_weChat"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_12" />
            <ImageView
                android:id="@+id/image_weChat_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_radio_button"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_aliPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y50"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50">
            <ImageView
                android:id="@+id/image_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_pay_method_alipay"/>
            <TextView
                android:layout_toRightOf="@+id/image_alipay"
                android:id="@+id/tv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="@color/autoColor"
                android:paddingLeft="@dimen/x25"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_14" />
            <TextView
                android:layout_below="@+id/tv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上支付宝支付"
                android:textColor="@color/gray"
                android:paddingLeft="@dimen/x25"
                android:layout_marginTop="@dimen/y14"
                android:layout_toRightOf="@+id/image_alipay"
                android:includeFontPadding="false"
                android:textSize="@dimen/font_12" />
            <ImageView
                android:id="@+id/image_alipay_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/selector_radio_button"/>
        </RelativeLayout>
    <Button
        android:id="@+id/button_pay"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y80"
        android:layout_marginTop="@dimen/y216"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_theme_color_40"
        android:layout_marginBottom="@dimen/y40"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16"
        tools:targetApi="lollipop" />

</LinearLayout>
