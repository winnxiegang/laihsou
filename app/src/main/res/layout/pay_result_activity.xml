<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/default_background"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/tv_result_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y90"
        android:src="@mipmap/pay_result_success" />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y80"
        android:text="恭喜您！支付成功"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tv_result_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y22"
        android:text="记得准时参加活动哦～"
        android:textColor="@color/dark_black"
        android:textSize="@dimen/font_14" />

</LinearLayout>
